<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DidaktikAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizar el texto -->
        <item name="android:fontFamily">@font/noahgrotesque</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/roca</item>
        <!-- Personalizar el fondo -->
        <item name="android:windowBackground">@color/material_dynamic_neutral10</item>
    </style>


    <!--Boton fondo verde-->
    <style name="GreenButtonStyle">
        <item name="android:background">@color/verdeClaro</item>
        <item name="android:textColor">@color/blancoPuro</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/noahgrotesquebold</item>
    </style>

    <!--Boton fondo gris-->
    <style name="GreyButtonStyle">
        <item name="android:background">@color/material_dynamic_neutral10</item>
        <item name="android:textColor">@color/grisClaro</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/noahgrotesquebold</item>
    </style>

    <!--Boton fondo gris-->
    <style name="WhiteCard">
        <item name="android:background">@color/material_dynamic_neutral10</item>
        <item name="android:radius">2dp</item>
    </style>

    <!--Box blanco puro-->
    <style name="backgroundBlancoPuro">
        <item name="android:background">@drawable/background_gris_claro_dark</item>
    </style>

    <!--Box gris claro-->
    <style name="backgroundGrisClaro">
        <item name="android:background">@drawable/background_blanco_puro_dark</item>
    </style>

    <!--Boton transparente inferior-->
    <style name="transparentButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/roca</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/noahgrotesquebold</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Boton transparente secundario-->
    <style name="transparentButtonPri" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/blancoOscuro</item>
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/noahgrotesquebold</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Boton transparente primario-->
    <style name="transparentButtonSec" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/naranja</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/noahgrotesquebold</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Boton tint verde-->
    <style name="GreenIconStyle">
        <item name="android:tint">@color/material_dynamic_neutral10</item>
    </style>
    <!--Boton tint gris-->
    <style name="GreyIconStyle">
        <item name="android:tint">@color/material_dynamic_neutral10</item>
    </style>

    <!--Texto resplandeciente naranja-->
    <style name="TextoResplandecienteStyle">
        <item name="android:textColor">@color/naranja</item>
    </style>

    <!--Texto destacado marron-->
    <style name="TextoDestacadoStyle">
        <item name="android:textColor">@color/blancoOscuro</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.DidaktikAppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <!--Circulo main menu-->
    <style name="CirculoMainMenu">
        <item name="android:background">@drawable/circulo_main_menu_dark</item>
    </style>

</resources>
