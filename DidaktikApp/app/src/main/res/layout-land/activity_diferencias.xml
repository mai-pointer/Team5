<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiferenciasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        style="@style/CirculoMainMenu"
        android:layout_width="175dp"
        android:layout_height="170dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <Button
            android:id="@+id/btnJugar"
            style="@style/transparentButtonSec"
            android:layout_width="123dp"
            android:layout_height="94dp"
            android:layout_marginTop="36dp"
            android:text="0"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/TextoDestacadoStyle"
        android:layout_width="348dp"
        android:layout_height="89dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:text="@string/diferenciasTitulo"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView8"
        android:layout_width="346dp"
        android:layout_height="137dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:src="@drawable/diferencias1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView12"
        android:layout_width="345dp"
        android:layout_height="139dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:src="@drawable/diferencias2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />
</androidx.constraintlayout.widget.ConstraintLayout>