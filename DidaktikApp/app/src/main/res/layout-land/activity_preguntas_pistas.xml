<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/textPregunta"
      android:layout_width="644dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="52dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="35dp"
      android:padding="0dp"
      android:textAlignment="textStart"
      android:textColor="@color/marron"
      android:textSize="22sp"
      tools:text="¿Cuál es tu respuesta?" />

  <RadioGroup
      android:id="@+id/radioGroup"
      android:layout_width="wrap_content"
      android:layout_height="250dp"
      android:layout_below="@+id/imagenVideo"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="338dp"
      android:layout_marginTop="-252dp"
      android:layout_marginEnd="36dp"
      android:padding="16dp">

    <RadioButton
        android:id="@+id/opcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:textColor="@color/roca"
        tools:text="Opción 1" />

    <RadioButton
        android:id="@+id/opcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:textColor="@color/roca"
        tools:text="Opción 2" />

    <RadioButton
        android:id="@+id/opcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:textColor="@color/roca"
        tools:text="Opción 3" />

    <RadioButton
        android:id="@+id/opcion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:textColor="@color/roca"
        tools:text="Opción 4" />
  </RadioGroup>

  <ImageView
      android:id="@+id/imagenVideo"
      android:layout_width="257dp"
      android:layout_height="257dp"
      android:layout_below="@+id/textPregunta"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="54dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="434dp"
      android:adjustViewBounds="true"
      android:contentDescription="Imagen"
      android:scaleType="fitCenter"
      tools:srcCompat="@tools:sample/avatars[2]" />
</RelativeLayout>