<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra de navegación (Toolbar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blancoPuro">

        <!-- Contenedor lineal para alinear elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Título de la actividad -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lezamako SantaMaria"
                android:textColor="@color/marron"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Espacio para separar el título y el ícono -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Botón de inicio con ícono de casa a la derecha -->
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón de inicio"
                android:onClick="onHomeButtonClicked"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:src="@drawable/baseline_home_24"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenido principal debajo de la barra de navegación -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">

        <!-- TextView centrado verticalmente en el centro -->
        <TextView
            android:id="@+id/textViewPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/noahgrotesqueblack"
            android:textColor="@color/verdeOscuro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- ImageView (botón) a la derecha -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Botón de retroceso"
            android:onClick="onBackButtonClicked"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Imagen a pantalla completa -->
        <ImageView
            android:id="@+id/imageViewFullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_church_24"
            android:tint="@color/grisOscuro"
            tools:ignore="UseAppTint" />

        <!-- Cuadrícula estilo puzle encima de la imagen -->
        <GridLayout
            android:id="@+id/gridLayoutPuzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="9">

            <!-- Primer cuadro -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/bordered_transparent_background"
                android:contentDescription="@null" />

        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
