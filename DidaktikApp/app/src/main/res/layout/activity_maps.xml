<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal que contiene el FragmentContainerView y otros elementos segÃºn sea necesario -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.didaktikapp.titleFragment.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:layout="@layout/fragment_title" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="267dp"
        android:layout_height="223dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <!-- Contenedor del mapa -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="676dp"
        android:layout_below="@+id/fragmentContainerView"

        tools:context=".MapsActivity" />

    <!-- Contenedor del fragmento -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp" />

</RelativeLayout>
